@model MissingReportModel

@{
    ViewData["Title"] = "Отчёт";
}

<h1>Отчёт о отсутсвующих РПД</h1>
<h4>Следующие РПД упоминаются в планах, но отсутсвуют в базе данных:</h4>
<ul class="list-group">
    @foreach (var i in @Model.MissingRpds)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="@Url.Action("Index", "Main", new { searchString = i.Split(" - ")[^1].Trim() })" title="Поиск похожих по названию" class="text-decoration-none">@i</a>
        </li>
    }
</ul>